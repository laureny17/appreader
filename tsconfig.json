{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "*.ts",
    "tests/application-assignments-tests.ts",
    "tests/review-records-tests.ts",
    "src/application-assignments.ts",
    "src/event-directory.ts",
    "src/review-records.ts",
    "src/gemini-llm.ts",
    "src/models.ts"
  ],
  "files": [
    "src/review-records.ts",
    "src/gemini-llm.ts",
    "tests/review-records-tests.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
